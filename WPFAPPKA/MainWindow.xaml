<Window x:Class="WPFAPPKA.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="300" Width="500">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="120"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Label Content="Imię" Grid.Row="0" Grid.Column="0"/>
        <TextBox Grid.Row="0" Grid.Column="1" Name="firstName"/>

        <Label Content="Nazwisko" Grid.Row="1" Grid.Column="0"/>
        <TextBox Grid.Row="1" Grid.Column="1" Name="lastName"/>

        <Label Content="Hasło" Grid.Row="2" Grid.Column="0"/>
        <PasswordBox Grid.Row="2" Grid.Column="1" Name="password"/>

        <Button 
            Content="Rejestruj" 
            Grid.Row="3" Grid.ColumnSpan="2"
            HorizontalAlignment="Center"
            Width="150"
            Click="Button_Click"/>

        <TextBlock Name="Output"
                   Grid.Row="4" Grid.ColumnSpan="2"
                   TextAlignment="Center"
                   Margin="10"/>
    </Grid>
</Window>

